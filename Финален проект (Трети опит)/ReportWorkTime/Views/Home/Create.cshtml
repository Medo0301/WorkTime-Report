@model User
@{
    ViewData["Title"] = "Нов служител";
}
<br />
<h1 class="text-info">Нов служител</h1>
<br />
<div asp-validation-summary="All" class="text-danger"></div>

<div class="border container" style="padding:20px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="FName">Име: </label>
            </div>
            <div class="col-5">
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LName">Фамилия: </label>
            </div>
            <div class="col-5">
                <input asp-for="LName" class="form-control" />
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Email">Имейл: </label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="UserName">Потребителско име: </label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Password">Парола: </label>
            </div>
            <div class="col-5">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-4 offset-3">
                <button asp-controller="Home" asp-action="Create" type="submit" class="btn btn-primary">Запиши</button>
            </div>
            <div class="col-1">
                <a asp-action="Index" class="btn btn-secondary form-control">Затвори</a>
            </div>
        </div>
    </form>
</div>